<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="charlie.a07073.com.ultimatetrickster.main.ToolFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:padding="20dp"
            android:id="@+id/broken_screen_tv"
            android:background="@drawable/main_tab_common_text_selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/screen_icon"
            android:gravity="center"
            android:text="Broken Screen" />

        <TextView
            android:id="@+id/fart_machine_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:background="@drawable/main_tab_common_text_selector"
            android:layout_weight="1"
            android:drawableTop="@mipmap/fart_machine_icon"
            android:gravity="center"
            android:text="Fart Machine" />

        <TextView
            android:id="@+id/call_police_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_tab_common_text_selector"
            android:padding="20dp"
            android:drawableTop="@mipmap/call_police_icon"
            android:gravity="center"
            android:text="Call Police" />

        <TextView
            android:id="@+id/transparent_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_weight="1"
            android:background="@drawable/main_tab_common_text_selector"
            android:drawableTop="@mipmap/transparent_icon"
            android:gravity="center"
            android:text="Magic Wallpaper" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/iq_test_tv"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_tab_common_text_selector"
            android:drawableTop="@mipmap/iq_test_icon"
            android:gravity="center"
            android:text="IQ Test" />

        <TextView
            android:id="@+id/horror_camera_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_tab_common_text_selector"
            android:drawableTop="@mipmap/camera_icon"
            android:padding="20dp"
            android:gravity="center"
            android:text="Horror Camera" />

        <TextView
            android:id="@+id/electric_screen_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/electric_icon"
            android:gravity="center"
            android:background="@drawable/main_tab_common_text_selector"
            android:text="Electric Screen" />

        <TextView
            android:id="@+id/more_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/more_icon"
            android:padding="20dp"
            android:background="@drawable/main_tab_common_text_selector"
            android:gravity="center"
            android:text="More..." />

    </LinearLayout>


</LinearLayout>
